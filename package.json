    "scripts": {
        "prebuild": "rimraf dist && yarn submodule",
        "build": "nest build",
        "format": "prettier --write \"{src,scripts}/**/*.ts\"",
        "format:watch": "onchange \"{src,scripts}/**/*.ts\" -- prettier --write {{changed}}",
        "start": "node dist/src/main",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,scripts}/**/*.ts\" --fix",
        "submodule": "git submodule init && git submodule update",
        "secrets:write": "ts-node scripts/secrets.ts get --write",
        "secrets:get": "ts-node scripts/secrets.ts get",
        "secrets:post": "ts-node scripts/secrets.ts post"
    },
