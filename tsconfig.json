{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"paths": {
			"@snowflake": [ "src/libs/snowflake" ],
			"@crypto": [ "src/libs/crypto" ],
			"@templates": [ "src/templates" ],
			"@routers/*": [ "src/routers/*" ],
			"@templates/*": [ "src/templates/*" ]
		}
	}
}
